<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ListView
        android:id="@+id/listview_activity_shopping_list_check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

  </ListView>

  <Button
      android:id="@+id/button_activity_shoppinglist_check_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
    android:text="@string/activity_main_check_button">

  </Button>

  <ListView
        android:id="@+id/listview_activity_shopping_list_products_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  </ListView>

</LinearLayout>